<!DOCTYPE html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Rejestracja</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Cormorant+SC:wght@300;400;700&family=Oxygen:wght@300;400;700&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="./assets/css/register.min.css" />
		<script defer src="./assets/js/register.js"></script>
	</head>

	<body>
		<div class="background">
			<div class="wrapper">
				<!-- @include 'nav.kit' -->
				<div class="left-sitebar">
					<!-- @include 'left-sitebar' -->
				</div>
				<main class="main">
					<h1>Zarejestruj się!</h1>
					<form
						class="form"
						id="register-form"
						action="/register"
						method="post"
					>
						<label for="email">Wprowadź adres e-mail <i>*</i></label>
						<input
							class="input-field"
							type="email"
							name="email"
							id="email"
							placeholder="xxxkoxwojxxx@kantor.pl"
						/>
						<p class="info">.</p>
						<label for="metin-nick">Wybierz nick <i>*</i></label>
						<input
							class="input-field"
							type="text"
							name="metin-nick"
							id="metin-nick"
							placeholder="Metin"
						/>
						<p class="info">.</p>
						<label for="discord-nick"
							>Wpisz swój nick z Discord'a <i>*</i></label
						>
						<input
							class="input-field"
							type="text"
							name="discord-nick"
							id="discord-nick"
							placeholder="Discord"
						/>
						<p class="info">.</p>
						<label for="password">Wpisz hasło <i>*</i></label>
						<input
							class="input-field"
							type="password"
							name="password"
							id="password"
							placeholder="Hasło"
						/>
						<p class="info">.</p>
						<label for="password-conf">Powtórz hasło <i>*</i></label>
						<input
							class="input-field"
							type="password"
							name="password-conf"
							id="password-conf"
							placeholder="Powtórz hasło"
						/>
						<p class="info">.</p>

						<input
							class="input-field"
							type="checkbox"
							name="acceptance"
							id="acceptance"
						/>
						<label for="acceptance">Akceptuje warunki regulaminu</label>
						<button type="submit">Zarejestruj się</button>
					</form>
				</main>
				<div class="right-sitebar">
					<!-- @include 'right-sitebar' -->
				</div>
			</div>
		</div>
	</body>
</html>
