<!DOCTYPE html>
<html lang="pl">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Support</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Cormorant+SC:wght@300;400;700&family=Oxygen:wght@300;400;700&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="./assets/css/support.min.css" />
		<script defer src="./assets/js/support.min.js"></script>
	</head>

	<body>
		<div class="background">
			<div class="wrapper">
				<!-- @include 'nav.kit' -->
				<div class="left-sitebar">
					<!-- @include 'left-sitebar' -->
				</div>
				<main class="main">
					<h1>Stwórz zgłoszenie</h1>
					<form class="form" id="support-form" action="/support" method="post">
						<label for="email">Wprowadź adres e-mail</label>
						<input
							type="email"
							name="email"
							id="email"
							placeholder="xxxkoxwojxxx@kantor.pl"
						/>
						<label for="subject">Temat zgłoszenia <i>*</i></label>
						<input
							type="text"
							name="subject"
							id="subject"
							placeholder="Temat"
						/>
						<label for="subject-msg">Treść zgłoszenia</label>
						<textarea
							name="message"
							id="subject-msg"
							cols="30"
							rows="10"
							placeholder="Glevia"
						></textarea>
						<input type="checkbox" name="privacy" id="privacy" />
						<label for="privacy"
							>Wyfrażam zgode na przetwarzanie danych osobowych w celu
							rozwiązania zgloszenia.</label
						>
						<button type="submit">prześlij zgłoszenie</button>
					</form>
				</main>
				<div class="right-sitebar">
					<!-- @include 'right-sitebar' -->
				</div>
			</div>
		</div>
	</body>
</html>
